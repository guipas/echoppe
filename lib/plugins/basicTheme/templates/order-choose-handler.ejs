<%- include(`./partials/header`) %>
<div class="container">
  <div class="row align-items-center justify-content-center">
    <div class="col-12 col-md-4">
      <div class="choices">
        <form action="/order/choice" method="POST">
        <input type="hidden" name="_csrf" value="<%= locals.csrf %>">
          <% locals.handlers.forEach(handler => { %>
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="radio" name="choice" value="<%= handler.name %>">
                <%= handler.label %>
              </label>
            </div>
          <% }) %>
          <div class="form-group text-center pt-3">
            <input type="submit" value="continue" class="btn btn-outline-primary">
          </div>
        </form>
          <p class="text-center">
            <form action="/order/previous" method="POST">
              <input type="hidden" name="_csrf" value="<%= locals.csrf %>">
              <input type="submit" class="btn btn-outline-secondary" value="&larr; Back">
            </form>
          </p>
      </div>

    </div>
  </div>
</div>
<%- include(`./partials/footer`) %>